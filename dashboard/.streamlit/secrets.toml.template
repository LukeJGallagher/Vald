# Streamlit Cloud Secrets Template
# Copy this to secrets.toml and fill in your values
# DO NOT commit secrets.toml to git!

# VALD API Credentials
[vald]
MANUAL_TOKEN = "your_vald_api_token_here"
TENANT_ID = "your_tenant_id_here"
VALD_REGION = "euw"  # Options: euw, use, aue

# Optional: Client credentials (if using OAuth flow)
# CLIENT_ID = "your_client_id"
# CLIENT_SECRET = "your_client_secret"
